{
  "extends": ["eslint:recommended", "react-app", "react-app/jest"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "max-len": ["error", { "code": 120 }],
    "no-console": ["warn"],
    "no-unused-vars": ["error"]
  }
}
